<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chocoroll.subwayseat.Can.CanActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/horizontalScrollView" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ff2f2f2f">

        <LinearLayout
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="left"
                    android:id="@+id/linearLayout_left">

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="right"
                    android:id="@+id/linearLayout_right">

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>




            </LinearLayout>

    </ScrollView>>



    <ImageView
        android:layout_width="70dip"
        android:layout_height="50dip"
        android:id="@+id/btn_allowTOP"
        android:src="@drawable/up"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="70dip"
        android:layout_height="50dip"
        android:id="@+id/btn_allowBOTTOM"
        android:src="@drawable/down"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />



        <Button
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:background="@drawable/stand"
            android:id="@+id/btnStand"
            android:tag="1000"
            />



    <ImageButton
        android:layout_margin="10dp"
        android:src="@drawable/alarm"
        android:background="@null"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:id="@+id/btnAlarm"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/horizontalScrollView"
        android:layout_alignEnd="@+id/horizontalScrollView" />


    <ImageButton
        android:layout_marginBottom="10dp"
        android:src="@drawable/post2"
        android:background="@null"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:id="@+id/btnChat"
        android:layout_toLeftOf="@id/btnAlarm"
        android:layout_alignParentBottom="true" />

    <TextView
        android:textColor="#ffffe500"
        android:gravity="center"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textSize="50dp"
        android:text="2"
        android:id="@+id/txt_trainXY"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
